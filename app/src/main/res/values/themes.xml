<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">
    <!-- Base application theme. -->
    <style name="Theme.Homepoint" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/white</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/inter</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">true</item>
    </style>

    <style name="TextAppearance.HomePoint.Headline3" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="Widget.HomePoint.EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="fontWeight">600</item>
        <item name="android:popupBackground">@drawable/bg_edit_text</item>
        <item name="android:paddingStart">@dimen/dp_22</item>
        <item name="android:paddingEnd">@dimen/dp_22</item>
        <item name="android:paddingTop">@dimen/dp_32</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="Widget.HomePoint.ExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu">
        <item name="endIconDrawable">@drawable/ic_dropdown</item>
        <item name="endIconTint">#252525</item>
    </style>

    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <item name="fontFamily">@font/inter_regular</item>
    </style>

    <style name="HomePointEditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/black</item>
        <item name="fontWeight">600</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">@dimen/dp_16</item>
        <item name="android:paddingEnd">@dimen/dp_16</item>
        <item name="android:paddingTop">@dimen/dp_24</item>
        <item name="android:paddingBottom">@dimen/dp_8</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:background">@drawable/bg_edit_text</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="Widget.HomePoint.Checkbox" parent="Widget.AppCompat.CompoundButton.CheckBox">
        <item name="android:button">@drawable/ic_check_box</item>
        <item name="android:paddingStart">12dp</item>
    </style>

    <style name="Widget.HomePoint.RadioButton" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textFontWeight" tools:targetApi="p">300</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:button">@drawable/ic_btn_radio</item>
    </style>

</resources>