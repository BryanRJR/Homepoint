<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.register.RegisterActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/image_header"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:background="@drawable/img_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:id="@+id/constraint_card"
        android:layout_width="match_parent"
        android:layout_height="900dp"
        android:layout_marginTop="152dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            app:cardCornerRadius="24dp"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/tv_title_register"
                    android:layout_width="157dp"
                    android:layout_height="36dp"
                    android:layout_marginTop="@dimen/dp_16"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Daftar Akun"
                    android:textColor="#22364A"
                    android:textFontWeight="600"
                    android:textSize="26sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <RelativeLayout
                    android:id="@+id/relative_input_text"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/dp_16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/tv_title_register">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <com.synrgy.homepoint.utils.HomePointTextInputLayout
                            android:id="@+id/filled_text_name"
                            android:layout_width="312dp"
                            android:layout_height="wrap_content"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent">

                            <EditText
                                style="@style/HomePointEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Nama Lengkap"
                                android:textFontWeight="600" />

                        </com.synrgy.homepoint.utils.HomePointTextInputLayout>

                        <com.synrgy.homepoint.utils.HomePointTextInputLayout
                            android:id="@+id/filled_text_email"
                            android:layout_width="312dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/filled_text_name">

                            <EditText
                                style="@style/HomePointEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:hint="Email/No.Hp"
                                android:textFontWeight="600" />

                        </com.synrgy.homepoint.utils.HomePointTextInputLayout>

                        <com.synrgy.homepoint.utils.HomePointTextInputLayout
                            android:id="@+id/filled_text_password"
                            android:layout_width="312dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_16"
                            app:passwordToggleEnabled="true"
                            app:counterEnabled="true"
                            app:counterMaxLength="16"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/filled_text_email">

                            <EditText
                                style="@style/HomePointEditText"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:inputType="textPassword"
                                android:hint="Kata Sandi"
                                android:textFontWeight="600" />

                        </com.synrgy.homepoint.utils.HomePointTextInputLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintTop_toBottomOf="@+id/relative_input_text">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/contraint_layout_one"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="100dp">

                        <Button
                            android:id="@+id/btn_login"
                            android:layout_width="314dp"
                            android:layout_height="42dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginTop="@dimen/dp_8"
                            android:layout_marginEnd="24dp"
                            android:background="@drawable/button_background"
                            android:fontFamily="@font/inter_semibold"
                            android:text="Daftar"
                            android:textAllCaps="false"
                            android:textColor="#22364A"
                            android:textSize="16sp"
                            app:backgroundTint="@null"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <FrameLayout
                            android:id="@+id/frame_layout_register"
                            android:layout_width="303dp"
                            android:layout_height="20dp"
                            android:layout_marginTop="10dp"
                            android:orientation="horizontal"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/btn_login">


                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="start"
                                android:layout_marginTop="@dimen/dp_8"
                                android:background="@drawable/ic_border_login"
                                android:textColor="@color/black" />

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="end"
                                android:layout_marginTop="@dimen/dp_8"
                                android:background="@drawable/ic_border_login"
                                android:textColor="@color/black" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center_horizontal"
                                android:fontFamily="@font/inter_regular"
                                android:text="Atau masuk dengan"
                                android:textColor="@color/black"
                                android:textSize="14sp" />
                        </FrameLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_register_google"
                            android:layout_width="314dp"
                            android:layout_height="40dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/bg_btn_google"
                            android:drawableLeft="@drawable/ic_google"
                            android:paddingStart="80dp"
                            android:paddingEnd="80dp"
                            android:text="Akun Google"
                            android:textAllCaps="false"
                            android:textColor="#22364A"
                            android:textSize="16sp"
                            app:backgroundTint="@null"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintHorizontal_bias="0.498"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/frame_layout_register" />

                        <TextView
                            android:id="@+id/tv_term_cond"
                            android:layout_width="294dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_8"
                            android:fontFamily="@font/inter_regular"
                            android:text="@string/act_register_text_term_condition"
                            android:textAlignment="center"
                            android:clickable="true"
                            android:textColor="@color/black"
                            android:textFontWeight="400"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/btn_register_google" />


                        <LinearLayout
                            android:id="@+id/linear_register"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="12dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@id/tv_term_cond">

                            <TextView
                                android:id="@+id/tv_desc_login"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/inter_regular"
                                android:text="Sudah memiliki akun?"
                                android:textColor="@color/black"
                                android:textFontWeight="400"
                                android:textSize="14sp"
                                app:layout_constraintBottom_toBottomOf="parent"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent" />

                            <TextView
                                android:id="@+id/tv_btn_to_login"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="6dp"
                                android:fontFamily="@font/inter_semibold"
                                android:text="Masuk"
                                android:textColor="#316093"
                                android:textSize="16sp" />
                        </LinearLayout>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/dp_20"
                            android:src="@drawable/ic_homepoint_logo"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/linear_register" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </RelativeLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </com.google.android.material.card.MaterialCardView>
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>