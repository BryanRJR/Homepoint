<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dp_8">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_dialog_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_22"
            android:src="@drawable/ic_dialog_house_confirm_payment"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_bold"
            android:text="Apakah bukti transaksi sudah benar?"
            android:textColor="#316093"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/iv_dialog_confirm" />

        <TextView
            android:id="@+id/tv_desc_dialog"
            android:layout_width="277dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/inter_regular"
            android:text="Pastikan bukti yang telah kamu unggah valid agar transaksimu berhasil"
            android:textAlignment="center"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="12sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_dialog" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="40dp"
            android:layout_marginTop="@dimen/dp_24"
            android:layout_marginEnd="40dp"
            android:layout_marginBottom="@dimen/dp_20"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_desc_dialog">


            <TextView
                android:id="@+id/btn_confirm_dialog"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:padding="@dimen/dp_8"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_btn_yellow"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:clickable="true"
                android:text="Konfirmasi"
                android:textColor="@color/variant_1"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/btn_see_again"
                android:layout_width="112dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:padding="@dimen/dp_8"
                android:background="@drawable/bg_btn_voucher"
                android:clickable="true"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:paddingVertical="8dp"
                android:text="Lihat lagi"
                android:textColor="@color/variant_1"
                android:textSize="16sp"
                app:layout_constraintEnd_toStartOf="@+id/btn_confirm_dialog"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>