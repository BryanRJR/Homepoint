<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.order.OrderFragment">

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/tb_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:title="Daftar Pesanan Aktif"
        android:background="@color/variant_2"
        app:titleTextColor="@color/white"
        app:titleTextAppearance="@style/Widget.HomePoint.Toolbar.Title">

        <ImageView
            android:id="@+id/iv_history"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:src="@drawable/ic_history"
            android:clickable="true"
            android:focusable="true"
            android:background="?selectableItemBackground"
            android:padding="16dp"/>

    </com.google.android.material.appbar.MaterialToolbar>

    <RadioGroup
        android:id="@+id/cg_history"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center"
        android:checkedButton="@id/chip_pay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tb_history">

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/chip_pay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chip"
            android:button="@null"
            android:drawablePadding="@dimen/dp_8"
            android:paddingVertical="2dp"
            android:textSize="6sp"
            android:paddingHorizontal="12dp"
            android:drawableTop="@drawable/ic_wallet"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/dp_12"
            android:clickable="true"
            android:focusable="true"
            android:text="Bayar"
            android:drawableTint="@color/chip_text_color"
            android:foreground="?selectableItemBackground"
            android:textColor="@color/chip_text_color" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chip"
            android:button="@null"
            android:drawablePadding="@dimen/dp_8"
            android:paddingVertical="2dp"
            android:paddingHorizontal="12dp"
            android:drawableTop="@drawable/ic_packed"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/dp_12"
            android:clickable="true"
            android:focusable="true"
            android:text="Dikemas"
            android:textSize="6sp"
            android:drawableTint="@color/chip_text_color"
            android:foreground="?selectableItemBackground"
            android:textColor="@color/chip_text_color" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chip"
            android:button="@null"
            android:paddingVertical="2dp"
            android:drawablePadding="@dimen/dp_8"
            android:paddingHorizontal="12dp"
            android:drawableTop="@drawable/ic_sent"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/dp_12"
            android:clickable="true"
            android:focusable="true"
            android:text="Dikirim"
            android:textSize="6sp"
            android:drawableTint="@color/chip_text_color"
            android:foreground="?selectableItemBackground"
            android:textColor="@color/chip_text_color" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chip"
            android:button="@null"
            android:drawablePadding="@dimen/dp_8"
            android:paddingVertical="2dp"
            android:paddingHorizontal="12dp"
            android:layout_marginEnd="@dimen/dp_12"
            android:drawableTop="@drawable/ic_arrive"
            android:textAlignment="center"
            android:text="Sampai"
            android:textSize="6sp"
            android:drawableTint="@color/chip_text_color"
            android:foreground="?selectableItemBackground"
            android:textColor="@color/chip_text_color" />

        <androidx.appcompat.widget.AppCompatRadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_chip"
            android:button="@null"
            android:drawablePadding="@dimen/dp_8"
            android:paddingVertical="2dp"
            android:paddingHorizontal="12dp"
            android:drawableTop="@drawable/ic_evaluation"
            android:textAlignment="center"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?selectableItemBackground"
            android:text="Penilaian"
            android:textSize="6sp"
            android:drawableTint="@color/chip_text_color"
            android:textColor="@color/chip_text_color" />

    </RadioGroup>

    <com.google.android.material.divider.MaterialDivider
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        app:dividerColor="#DAE8F0"
        app:layout_constraintTop_toBottomOf="@id/cg_history"/>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/divider"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>