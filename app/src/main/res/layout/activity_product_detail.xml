<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.detail.ProductDetailActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/variant_2"
        app:theme="@style/ToolbarColoredBackArrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

       <androidx.constraintlayout.widget.ConstraintLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content">

           <ImageView
               android:id="@+id/iv_search"
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:src="@drawable/ic_search_detail"
               android:layout_marginEnd="16dp"
               app:layout_constraintEnd_toStartOf="@id/iv_cart"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:contentDescription="Icon Search" />

           <ImageView
               android:id="@+id/iv_cart"
               android:layout_width="24dp"
               android:layout_height="24dp"
               android:src="@drawable/ic_cart"
               android:layout_marginEnd="16dp"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               app:layout_constraintBottom_toBottomOf="parent"
               android:contentDescription="Icon Cart"/>
       </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.Toolbar>

    <androidx.core.widget.NestedScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_detail">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/iv_product_detail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:adjustViewBounds="true"
                android:src="@drawable/img_product_detail"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_btn_yellow"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:layout_marginBottom="10dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/iv_product_detail"
                app:layout_constraintEnd_toEndOf="parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:src="@drawable/ic_compare" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Bandingkan"
                    android:textColor="@color/variant_1"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_title_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/text_medium_1"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/iv_product_detail"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="VISHAL Diamond Set"/>

            <TextView
                android:id="@+id/tv_price_strike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/text_medium_2"
                android:layout_marginTop="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_product"
                app:layout_constraintStart_toStartOf="parent"
                android:text="@string/txt_price_strike"/>

            <TextView
                android:id="@+id/tv_price_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/text_black"
                android:layout_marginTop="16dp"
                android:layout_marginStart="8dp"
                app:layout_constraintStart_toEndOf="@id/tv_price_strike"
                app:layout_constraintBottom_toBottomOf="@id/tv_price_strike"
                android:text="Rp 155.000"/>

            <ImageView
                android:id="@+id/iv_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_price_product"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_share"/>

            <ImageView
                android:id="@+id/iv_discussion"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@id/iv_share"
                app:layout_constraintTop_toTopOf="@id/iv_share"
                app:layout_constraintBottom_toBottomOf="@id/iv_share"
                android:src="@drawable/ic_discussion"/>

            <ImageView
                android:id="@+id/iv_favorite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toStartOf="@id/iv_discussion"
                app:layout_constraintTop_toTopOf="@id/iv_discussion"
                app:layout_constraintBottom_toBottomOf="@id/iv_discussion"
                android:src="@drawable/ic_favorite_detail"/>

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:textSize="10sp"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price_strike"
                android:text="4.8"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_black"
                />

            <TextView
                android:id="@+id/tv_sold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="10sp"
                android:drawableStart="@drawable/ic_divider"
                android:drawablePadding="6dp"
                app:layout_constraintStart_toEndOf="@id/tv_rating"
                app:layout_constraintTop_toTopOf="@id/tv_rating"
                app:layout_constraintBottom_toBottomOf="@id/tv_rating"
                android:text="Terjual 100"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_black"
                />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_brand"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="16dp"
                app:cardElevation="0dp"
                app:cardBackgroundColor="#F9FDFF"
                app:cardCornerRadius="8dp"
                app:layout_constraintTop_toBottomOf="@+id/tv_sold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="16dp"
                    android:paddingVertical="8dp">

                    <TextView
                        android:id="@+id/tv_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Brand"/>

                    <TextView
                        android:id="@+id/tv_title_brand"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:layout_marginTop="8dp"
                        android:textSize="16sp"
                        android:textColor="@color/variant_1"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_brand"
                        android:text="VISHAL"/>

                    <ImageView
                        android:id="@+id/iv_divider"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_divider_blue"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:id="@+id/tv_color_product"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="12sp"
                        android:textColor="@color/black"
                        android:layout_marginStart="16dp"
                        app:layout_constraintStart_toEndOf="@id/iv_divider"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="Color :"/>

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_color_product"
                        app:layout_constraintStart_toStartOf="@id/tv_color_product"
                        android:src="@drawable/bg_color_product"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/tv_title_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/inter_semibold"
                android:layout_marginTop="16dp"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/card_brand"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Deskripsi Produk"/>

            <TextView
                android:id="@+id/tv_description_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_regular"
                android:textSize="14sp"
                android:textColor="@color/black"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title_description"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/txt_description_product"/>

            <LinearLayout
                android:id="@+id/layout_delivery"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:paddingVertical="8dp"
                app:layout_constraintTop_toBottomOf="@id/tv_description_product"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_delivery_1"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_light"
                        android:textColor="@color/black"
                        android:text="Kurir Reguler"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="16dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_delivery_2"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_light"
                        android:textColor="@color/black"
                        android:text="Ambil di Toko"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/img_delivery_3"
                        android:layout_marginBottom="8dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:fontFamily="@font/inter_light"
                        android:textColor="@color/black"
                        android:text="Kurir Homepoint"/>

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_title_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_semibold"
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/layout_delivery"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Ulasan"/>

            <TextView
                android:id="@+id/tv_rating_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginStart="16dp"
                android:textSize="10sp"
                android:drawableStart="@drawable/ic_star"
                android:drawablePadding="6dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_title_review"
                android:text="4.8"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_black"/>

            <TextView
                android:id="@+id/tv_total_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:textSize="10sp"
                android:drawableStart="@drawable/ic_divider"
                android:drawablePadding="6dp"
                app:layout_constraintStart_toEndOf="@id/tv_rating_2"
                app:layout_constraintTop_toTopOf="@id/tv_rating_2"
                app:layout_constraintBottom_toBottomOf="@id/tv_rating_2"
                android:text="75 Ulasan"
                android:fontFamily="@font/inter_regular"
                android:textColor="@color/text_black"/>


            <LinearLayout
                android:id="@+id/layout_image_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/tv_total_review"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_review_1"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_review_2"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_review_3"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:layout_marginEnd="4dp"
                    android:src="@drawable/img_review_4"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    android:src="@drawable/img_review_5"/>


            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/variant_3"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/layout_image_review"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingVertical="16dp"
                    android:paddingHorizontal="16dp">

                    <TextView
                        android:id="@+id/tv_reviewer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:text="K***21"/>

                    <TextView
                        android:id="@+id/tv_date_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/text_black"
                        android:textSize="11sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="2022-02-22 06:25"/>

                    <LinearLayout
                        android:id="@+id/layout_star_review"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_reviewer"
                        app:layout_constraintStart_toStartOf="parent"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_star"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_star"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_star"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_star"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/ic_star"/>

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_review"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/layout_star_review"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Sellernya ganteng ramah, fast respon"/>

                    <LinearLayout

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_review"
                        app:layout_constraintStart_toStartOf="parent">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:layout_marginEnd="4dp"
                            android:src="@drawable/img_review_1"/>

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:adjustViewBounds="true"
                            android:src="@drawable/img_review_2"/>
                    </LinearLayout>



                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_all_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:fontFamily="@font/inter_bold"
                android:textColor="@color/primary"
                android:textSize="14sp"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:layout_constraintTop_toBottomOf="@id/card_review"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Lihat semua ulasan"/>

            <TextView
                android:id="@+id/tv_title_discussion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/tv_all_review"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Diskusi"/>

            <TextView
                android:id="@+id/tv_desc_discussion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_regular"
                android:textSize="12sp"
                android:textColor="@color/black"
                app:layout_constraintTop_toBottomOf="@id/tv_title_discussion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Diskusikan pertanyaanmu terkait produk ini dengan kami maupun pembeli lainnya"/>

            <TextView
                android:id="@+id/tv_add_question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_btn_yellow"
                android:gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/text_black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/tv_desc_discussion"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Tulis Pertanyaan"/>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp"
                app:strokeColor="@color/variant_3"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@id/tv_add_question"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_commenter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/inter_medium"
                        android:textColor="@color/black"
                        android:textSize="12sp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:text="Lynn Tanner"/>

                    <TextView
                        android:id="@+id/tv_date_comment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/inter_light"
                        android:textColor="@color/text_black"
                        android:textSize="11sp"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_circle_blue"
                        app:layout_constraintStart_toEndOf="@id/tv_commenter"
                        app:layout_constraintTop_toTopOf="@id/tv_commenter"
                        app:layout_constraintBottom_toBottomOf="@id/tv_commenter"
                        android:text="2022-02-22"/>

                    <TextView
                        android:id="@+id/tv_desc_comment"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/tv_commenter"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Apakah terdapat garansi? Jika ya berapa lama garansinya?"/>


                    <com.google.android.material.divider.MaterialDivider
                        android:id="@+id/divider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:dividerColor="@color/variant_3"
                        app:layout_constraintTop_toBottomOf="@id/tv_desc_comment"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>


                    <ImageView
                        android:id="@+id/iv_circle_gray"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_circle_gray"
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="24dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider"/>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        app:dividerColor="@color/variant_3"
                        android:layout_marginTop="4dp"
                        android:layout_marginBottom="16dp"
                        app:layout_constraintTop_toBottomOf="@id/iv_circle_gray"
                        app:layout_constraintStart_toStartOf="@id/iv_circle_gray"
                        app:layout_constraintEnd_toEndOf="@id/iv_circle_gray"
                        app:layout_constraintBottom_toBottomOf="@id/edt_comment"/>

                    <TextView
                        android:id="@+id/tv_customer_care"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_capsule_blue"
                        android:paddingVertical="2dp"
                        android:paddingHorizontal="8dp"
                        android:layout_marginStart="20dp"
                        android:fontFamily="@font/inter_medium"
                        android:textSize="10sp"
                        android:textColor="@color/white"
                        android:text="Customer care"
                        app:layout_constraintStart_toEndOf="@id/iv_circle_gray"
                        app:layout_constraintBottom_toBottomOf="@id/iv_circle_gray"/>

                    <TextView
                        android:id="@+id/tv_date_costumer_care"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:fontFamily="@font/inter_light"
                        android:textColor="@color/text_black"
                        android:textSize="11sp"
                        android:drawablePadding="8dp"
                        android:drawableStart="@drawable/ic_circle_blue"
                        app:layout_constraintStart_toEndOf="@id/tv_customer_care"
                        app:layout_constraintTop_toTopOf="@id/tv_customer_care"
                        app:layout_constraintBottom_toBottomOf="@id/tv_customer_care"
                        android:text="2022-02-22"/>

                    <TextView
                        android:id="@+id/tv_hello_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        app:layout_constraintTop_toBottomOf="@id/tv_customer_care"
                        app:layout_constraintStart_toStartOf="@id/tv_customer_care"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:text="Halo, Garansi produk ini satu tahun, jika anda menemui masalah dengan produk silahkan hubungi kami atau datang ke toko offline terdekat."/>

                    <EditText
                        android:id="@+id/edt_comment"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_et_comment"
                        android:paddingHorizontal="16dp"
                        android:paddingVertical="8dp"
                        android:layout_marginEnd="16dp"
                        android:layout_marginVertical="16dp"
                        android:fontFamily="@font/inter_regular"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:hint="Tambahkan komentar"
                        app:layout_constraintTop_toBottomOf="@id/tv_hello_comment"
                        app:layout_constraintStart_toStartOf="@id/tv_hello_comment"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/tv_title_other_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="16dp"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintTop_toBottomOf="@id/card_comment"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="Produk lainnya"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rv_other_product"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="180dp"
                android:paddingStart="16dp"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:orientation="horizontal"
                tools:listitem="@layout/offer_card_item"
                app:layout_constraintTop_toBottomOf="@id/tv_title_other_product"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.core.widget.NestedScrollView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardElevation="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_price_strike_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="16dp"
                android:fontFamily="@font/inter_medium"
                android:textSize="16sp"
                android:textColor="@color/text_medium_2"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="@string/txt_price_strike"/>

            <TextView
                android:id="@+id/tv_price_product_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/inter_semibold"
                android:textSize="20sp"
                android:textColor="@color/text_black"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price_strike_card"
                android:text="Rp15.000"/>

            <TextView
                android:id="@+id/tv_plus_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:paddingHorizontal="14dp"
                android:background="@drawable/bg_plus_blue"
                android:text="+"
                android:textColor="@color/white"
                android:layout_marginEnd="16dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tv_price_strike_card"/>

            <TextView
                android:id="@+id/tv_number_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:paddingHorizontal="14dp"
                android:background="@drawable/bg_number_blue"
                android:text="1"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@id/tv_plus_card"
                app:layout_constraintTop_toTopOf="@id/tv_plus_card"
                app:layout_constraintBottom_toBottomOf="@id/tv_plus_card"/>

            <TextView
                android:id="@+id/tv_minus_card"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="6dp"
                android:paddingHorizontal="14dp"
                android:background="@drawable/bg_minus_blue"
                android:text="-"
                android:textColor="@color/white"
                app:layout_constraintEnd_toStartOf="@id/tv_number_card"
                app:layout_constraintTop_toTopOf="@id/tv_number_card"
                app:layout_constraintBottom_toBottomOf="@id/tv_number_card"/>

            <com.google.android.material.divider.MaterialDivider
                android:id="@+id/divider_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:dividerColor="#B2E2E2E2"
                app:layout_constraintTop_toBottomOf="@id/tv_price_product_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="16dp"
                android:paddingVertical="8dp"
                android:layout_marginVertical="16dp"
                android:background="@drawable/bg_btn_yellow"
                android:gravity="center"
                android:fontFamily="@font/inter_semibold"
                android:textColor="@color/variant_1"
                android:textSize="18sp"
                android:text="+ Keranjang"
                app:layout_constraintTop_toBottomOf="@id/divider_card"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>