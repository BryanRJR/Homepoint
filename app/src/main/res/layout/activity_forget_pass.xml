<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.login.ForgetPassActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_reset_pass"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <FrameLayout
            android:id="@+id/image_header"
            android:layout_width="match_parent"
            android:layout_height="192dp"
            android:background="@drawable/img_header"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

        <RelativeLayout
            android:id="@+id/constraint_card_reset_pass"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="172dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="24dp"
                app:cardElevation="0dp"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:paddingBottom="@dimen/dp_16">

                    <TextView
                        android:id="@+id/tv_title_forget_password"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Reset Kata Sandi"
                        android:textColor="#22364A"
                        android:textFontWeight="600"
                        android:textSize="26sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/tv_desc_reset_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/dp_16"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_30"
                        android:fontFamily="@font/inter_regular"
                        android:textColor="@color/black"
                        android:text="@string/act_forget_pass_desc"
                        android:textSize="12sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_title_forget_password" />

                    <com.synrgy.homepoint.utils.HomePointTextInputLayout
                        android:id="@+id/tv_email_reset"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_30"
                        android:layout_marginTop="@dimen/dp_16"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_desc_reset_password">

                        <EditText
                            style="@style/HomePointEditText"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:hint="Email"
                            android:textFontWeight="600" />

                    </com.synrgy.homepoint.utils.HomePointTextInputLayout>

                    <Button
                        android:id="@+id/btn_login"
                        android:layout_width="match_parent"
                        android:layout_height="42dp"
                        android:layout_marginTop="@dimen/dp_24"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginRight="@dimen/dp_30"
                        android:background="@drawable/bg_btn_yellow"
                        android:fontFamily="@font/inter_semibold"
                        android:text="Kirim Permintaan"
                        android:textAllCaps="false"
                        android:textColor="#22364A"
                        android:textSize="16sp"
                        app:backgroundTint="@null"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/tv_email_reset" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </com.google.android.material.card.MaterialCardView>
        </RelativeLayout>

    <ImageView
        android:layout_width="139dp"
        android:layout_height="38dp"
        android:layout_marginBottom="@dimen/dp_32"
        android:src="@drawable/ic_homepoint_logo"
        app:layout_constraintBottom_toBottomOf="@+id/header_reset_pass"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>