<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.payment.ConfirmPaymentActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_bar_payment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="10dp"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@id/iv_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="16dp"
            android:src="@drawable/ic_arrow_back"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:text="Konfirmasi Pembayaran"
            android:textColor="@color/black"
            android:fontFamily="@font/inter_semibold"
            android:textFontWeight="600"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>


    <ScrollView
        android:id="@+id/layout_confirm_payment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_bar_payment">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:paddingStart="@dimen/dp_16"
                android:paddingEnd="@dimen/dp_16"
                app:layout_constraintTop_toTopOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="6dp"
                    app:cardElevation="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="#34FD8989">

                        <ImageView
                            android:id="@+id/iv_clock"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_8"
                            android:src="@drawable/ic_icon_clock_red"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_desc_batas_bayar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/dp_8"
                            android:fontFamily="@font/inter_regular"
                            android:text="Batas pembayaran"
                            android:textColor="#EF0909"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/iv_clock"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_time_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/dp_8"
                            android:fontFamily="@font/inter_regular"
                            android:text="24 Mei 2022 | 09:00 WIB"
                            android:textColor="#EF0909"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />
                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>
            </LinearLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraint_info_payment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_16"
                android:padding="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/linearLayout2">

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:cardCornerRadius="0dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_border_outlineblue">

                        <TextView
                            android:id="@+id/tv_desc_info_payment_rek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="6dp"
                            android:fontFamily="@font/inter_regular"
                            android:text="Informasi rekening pembayaran"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                        <TextView
                            android:id="@+id/tv_desc_nama_bank"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16"
                            android:fontFamily="@font/inter_regular"
                            android:text="Nama Bank"
                            android:textColor="#505050"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_desc_info_payment_rek" />

                        <TextView
                            android:id="@+id/tv_desc_no_rek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16"
                            android:fontFamily="@font/inter_regular"
                            android:text="Nomor Rekening"
                            android:textColor="#505050"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_desc_nama_bank" />

                        <TextView
                            android:id="@+id/tv_desc_nama_penerima"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16"
                            android:fontFamily="@font/inter_regular"
                            android:text="Nama Penerima"
                            android:textColor="#505050"
                            android:textSize="12sp"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_desc_no_rek" />

                        <TextView
                            android:id="@+id/tv_desc_total_bayar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16"
                            android:fontFamily="@font/inter_regular"
                            android:text="Total Pembayaran"
                            android:textColor="#505050"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_desc_nama_penerima" />

                        <TextView
                            android:id="@+id/tv_bank_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16"
                            android:fontFamily="@font/inter_regular"
                            android:text="Bank Central Asia"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/view_center"
                            app:layout_constraintTop_toBottomOf="@+id/tv_desc_info_payment_rek" />

                        <TextView
                            android:id="@+id/tv_no_rek"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16"
                            android:fontFamily="@font/inter_regular"
                            android:text="375 178 5066 1234"
                            android:textColor="@color/black"
                            app:layout_constraintStart_toEndOf="@+id/view_center"
                            app:layout_constraintTop_toBottomOf="@+id/tv_desc_nama_bank" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_copy_rek"
                            android:layout_width="44dp"
                            android:layout_height="19dp"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/bg_btn_copy_text"
                            android:fontFamily="@font/inter_regular"
                            android:text="Salin"
                            android:textAllCaps="false"
                            android:textColor="#316093"
                            android:textSize="12sp"
                            app:layout_constraintBottom_toTopOf="@+id/tv_name_receiver"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_bank_name" />

                        <TextView
                            android:id="@+id/tv_name_receiver"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16"
                            android:fontFamily="@font/inter_regular"
                            android:text="Homepointstore"
                            android:textColor="@color/black"
                            android:textSize="14sp"
                            app:layout_constraintStart_toEndOf="@+id/view_center"
                            app:layout_constraintTop_toBottomOf="@+id/tv_no_rek" />

                        <TextView
                            android:id="@+id/tv_total_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="@dimen/dp_16"
                            android:fontFamily="@font/inter_regular"
                            android:text="Rp 840.500"
                            android:textColor="@color/black"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintStart_toEndOf="@+id/view_center"
                            app:layout_constraintTop_toBottomOf="@+id/tv_name_receiver" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_copy_total_payment"
                            android:layout_width="44dp"
                            android:layout_height="19dp"
                            android:layout_marginTop="@dimen/dp_16"
                            android:layout_marginEnd="6dp"
                            android:background="@drawable/bg_btn_copy_text"
                            android:fontFamily="@font/inter_regular"
                            android:text="Salin"
                            android:textAllCaps="false"
                            android:textColor="#316093"
                            android:textSize="12sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_name_receiver" />

                        <View
                            android:id="@+id/view_center"
                            android:layout_width="1dp"
                            android:layout_height="0dp"
                            android:layout_marginEnd="60dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/tv_desc_info_payment_rek" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </com.google.android.material.card.MaterialCardView>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/dp_16"
                app:layout_constraintTop_toBottomOf="@+id/constraint_info_payment"
                tools:layout_editor_absoluteX="16dp">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_bold"
                    android:text="Bukti Pembayaran"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:fontFamily="@font/inter_regular"
                    android:text="Upload bukti transfer"
                    android:textColor="@color/black"
                    android:textFontWeight="400"
                    android:textSize="14sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_reupload_image"
                    style="@style/Widget.MaterialComponents.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:fontFamily="@font/inter_semibold"
                    android:text="Upload ulang"
                    android:textAllCaps="false"
                    android:visibility="gone"
                    android:textColor="#316093"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toTopOf="@+id/cardView"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/cardView"
                    android:layout_width="match_parent"
                    android:layout_height="163dp"
                    android:layout_marginTop="@dimen/dp_8"
                    android:background="@drawable/bg_border_outlineblue_upload"
                    app:cardCornerRadius="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView2">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/bg_border_outlineblue_upload">

                        <TextView
                            android:id="@+id/text_action"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="@dimen/dp_8"
                            android:fontFamily="@font/inter_regular"
                            android:text="Upload File"
                            android:textColor="#727272"
                            android:textSize="11sp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toBottomOf="@+id/img_preview_sample" />

                        <ImageView
                            android:id="@+id/image_preview"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/img_product_detail"
                            android:scaleType="centerCrop"
                            android:visibility="gone" />

                        <ImageView
                            android:id="@+id/img_preview_sample"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="@dimen/dp_8"
                            android:src="@drawable/ic_upload_image"
                            android:visibility="visible"
                            app:layout_constraintBottom_toBottomOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent" />

                    </androidx.constraintlayout.widget.ConstraintLayout>
                </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_8"
                    android:fontFamily="@font/inter_regular"
                    android:text="Format gambar: JPG, JPEG, PNG, max 10 MB"
                    android:textColor="#727272"
                    android:textSize="12sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cardView" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/btn_before_confirm_payment"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_btn_gray"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="@dimen/dp_32"
                android:paddingVertical="8dp"
                android:text="Konfirmasi"
                android:textColor="@color/variant_1"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />

            <TextView
                android:id="@+id/btn_after_confirm_payment"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginHorizontal="16dp"
                android:background="@drawable/bg_btn_yellow"
                android:fontFamily="@font/inter_semibold"
                android:gravity="center"
                android:visibility="gone"
                android:layout_marginTop="64dp"
                android:layout_marginBottom="@dimen/dp_32"
                android:paddingVertical="8dp"
                android:text="Konfirmasi"
                android:textColor="@color/variant_1"
                android:textSize="16sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout6" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>